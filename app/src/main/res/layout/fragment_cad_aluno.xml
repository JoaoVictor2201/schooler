<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark_blue"
    tools:context=".cad_aluno">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Título da Tela -->
            <TextView
                android:id="@+id/tvCadastroTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="Cadastro de Aluno"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Campo Nome Completo -->
            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Completo"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etNomeCompleto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: João da Silva"
                android:textColorHint="@color/hint_grey"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="16dp"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp"/>

            <!-- Campo Escola -->
            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escola"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etEscola"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: Colégio Exemplo"
                android:textColorHint="@color/hint_grey"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="16dp"
                android:inputType="text"
                android:layout_marginBottom="16dp"/>

            <!-- Campo Endereço -->
            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: Rua das Flores, 123"
                android:textColorHint="@color/hint_grey"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="16dp"
                android:inputType="textPostalAddress"
                android:layout_marginBottom="16dp"/>

            <!-- Campo Período -->
            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Período"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinnerPeriodo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Campo Curso -->
            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curso"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etCurso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: Administração, Informática..."
                android:textColorHint="@color/hint_grey"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="16dp"
                android:inputType="text"
                android:layout_marginBottom="16dp"/>

            <!-- Campo Responsável -->
            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Responsável"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etResponsavel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: Maria da Silva"
                android:textColorHint="@color/hint_grey"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="16dp"
                android:inputType="textPersonName"
                android:layout_marginBottom="32dp"/>

            <!-- Botão Salvar -->
            <Button
                android:id="@+id/btnSalvarCad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SALVAR"
                android:background="@drawable/rounded_button_bg"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="16dp"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
