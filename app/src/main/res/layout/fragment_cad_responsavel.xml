<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark_blue"
    tools:context=".CadResponsavelFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvTituloResponsavel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="Novo Responsável"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Completo"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etRespNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: Maria da Silva"
                android:textColorHint="@color/hint_grey"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="16dp"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etRespCpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="000.000.000-00"
                android:textColorHint="@color/hint_grey"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="16dp"
                android:inputType="number"
                android:layout_marginBottom="16dp"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone / WhatsApp"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etRespTelefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="(XX) 9XXXX-XXXX"
                android:textColorHint="@color/hint_grey"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="16dp"
                android:inputType="phone"
                android:layout_marginBottom="16dp"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço Principal"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etRespEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rua, Número, Bairro"
                android:textColorHint="@color/hint_grey"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="16dp"
                android:inputType="textPostalAddress"
                android:layout_marginBottom="32dp"/>

            <Button
                android:id="@+id/btnSalvarResponsavel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SALVAR RESPONSÁVEL"
                android:background="@drawable/rounded_button_bg"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="16dp"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>